<Window x:Class="ZeroEditorRedux.Views.LoadLayers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeroEditorRedux.Views"
        mc:Ignorable="d"
        Title="Load Layers" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Topmost="True" WindowStartupLocation="CenterOwner">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock Text="Select Layers To Load"/>
        <ListBox/>
        <TextBlock Text="Select Layers by Game Mode"/>
        <ListBox/>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Button Content="Invert Selection"/>
                <Button Content="Select All"/>
            </StackPanel>
            <Button Content="Load Last"/>
            <Button Content="Load Writable"/>
            <Button Content="OK"/>
        </StackPanel>
        <CheckBox Content="Build accurate object collision" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
